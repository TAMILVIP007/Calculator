MDScreen:
<CalculatorApp>:
    id:calculator
    display:entry
    rows:5
    padding:10
    spacing:10

    MDBoxLayout:
        size_hint:(1,1)
        adaptive_height:True
        MDTextField:
            hint_text:"Enter Number"
            id:entry
            font_size:32
            multiline:False

    MDBoxLayout:
        cols:4
        adaptive_height:True
        
        spacing:10
        MDRaisedButton:
            size_hint:(1,1)
            text:"7"
            on_press:entry.text += self.text
        MDRaisedButton:
            size_hint:(1,1)
            text:"8"
            on_press:entry.text += self.text
        MDRaisedButton:
            size_hint:(1,1)
            text:"9"
            on_press:entry.text += self.text
        MDRaisedButton:
            size_hint:(1,1)
            text:"+"
            on_press:entry.text += self.text

    
    MDBoxLayout:
        adaptive_height:True
        spacing:10
        MDRaisedButton:
            size_hint:(1,1)
            text:"4"
            on_press:entry.text += self.text
        MDRaisedButton:
            size_hint:(1,1)
            text:"5"
            on_press:entry.text += self.text
        MDRaisedButton:
            size_hint:(1,1)
            text:"6"
            on_press:entry.text += self.text
        MDRaisedButton:
            size_hint:(1,1)
            text:"-"
            on_press:entry.text += self.text

    MDBoxLayout:
        adaptive_height:True
        spacing:10
        MDRaisedButton:
            size_hint:(1,1)
            text:"1"
            on_press:entry.text += self.text
        MDRaisedButton:
            size_hint:(1,1)
            text:"2"
            on_press:entry.text += self.text
        MDRaisedButton:
            size_hint:(1,1)
            text:"3"
            on_press:entry.text += self.text
        MDRaisedButton:
            size_hint:(1,1)
            text:"*"
            on_press:entry.text += self.text

    MDBoxLayout:
        adaptive_height:True
        spacing:10
        MDRaisedButton:
            size_hint:(1,1)
            text:"AC"
            on_press:entry.text = ""
        MDRaisedButton:
            size_hint:(1,1)
            text:"0"
            on_press:entry.text += self.text
        MDRaisedButton:
            size_hint:(1,1)
            text:"="
            on_press:calculator.calculate(entry.text)
        MDRaisedButton:
            size_hint:(1,1)
            text:"/"
            on_press:entry.text += self.text
